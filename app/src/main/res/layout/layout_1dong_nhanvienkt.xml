<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_staff"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/food_tteok" />

    <TextView
        android:id="@+id/tv_staffName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textColor="@color/blue"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/img_staff"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_staffID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="TextView"
        android:textColor="@color/hint_txt"
        android:textSize="20dp"

        app:layout_constraintStart_toEndOf="@+id/img_staff"
        app:layout_constraintTop_toBottomOf="@+id/tv_staffName" />

</androidx.constraintlayout.widget.ConstraintLayout>