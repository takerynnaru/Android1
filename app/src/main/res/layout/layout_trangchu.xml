<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></androidx.constraintlayout.widget.ConstraintLayout>


                <ViewFlipper
                    android:id="@+id/viewflipper"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    ></ViewFlipper>

                <LinearLayout
                    android:id="@+id/linear_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/gridlayout_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnOrderPreserved="false"
                        android:alignmentMode="alignMargins"
                        android:rowCount="4"
                        android:columnCount="2"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvTimKien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <ImageView
                                    android:src="@drawable/ic_baseline_search_24"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"/>
                                <TextView
                                    android:layout_marginTop="12dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tìm Kiếm NV"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvNhiemVu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/timetable" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="Nhiệm vụ"
                                    android:textColor="@color/blue"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvTTcanhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/user" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="TT cá nhân"
                                    android:textColor="@color/blue"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <ImageView
                                    android:src="@drawable/map"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"/>
                                <TextView
                                    android:layout_marginTop="12dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bản đồ"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvchamcong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <ImageView
                                    android:src="@drawable/people"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"/>
                                <TextView
                                    android:layout_marginTop="12dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <ImageView
                                    android:src="@drawable/z2925823873876_2094e6fd8adfbb661994b8efa3986ae7"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"/>
                                <TextView
                                    android:layout_marginTop="12dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <ImageView
                                    android:src="@drawable/z2925824678370_0919d80705766ce5cd8db930aca4a14d"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"/>
                                <TextView
                                    android:layout_marginTop="12dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="6dp"
                            android:layout_margin="12dp"
                            app:cardElevation="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <ImageView
                                    android:src="@drawable/z2925823873876_2094e6fd8adfbb661994b8efa3986ae7"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"/>
                                <TextView
                                    android:layout_marginTop="12dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>